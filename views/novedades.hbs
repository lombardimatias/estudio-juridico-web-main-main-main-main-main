<!-- Modales -->
{{#each novedades}}
<div class="modal fade" id="exampleModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h1 class="modal-title text-white" id="exampleModalLabel">{{titulo}}</h1>
                <button type="button" class="btn-close btn btn-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-body-custom">
                <h3 class="text-white">{{subtitulo}}</h3>
                {{#if imagen}}
                <img src="{{imagen}}" class="img-fluid">
                {{/if}}
                {{#if video_url}}
                <div class="video-container">
                     <video id="videoModal{{id}}" class="img-fluid" controls>
                        <source src="{{video_url}}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                {{/if}}
                <p class="text-white">{{cuerpo}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}
