    </video>
    
    <div class="contenido">
        <h2 class="text-white">{{titulo}}</h2>
        <p class="text-white">{{cuerpo}}</p>
        <a href="#" data-toggle="modal" data-target="#exampleModal{{id}}">
            <button>Leer MÃ¡s</button>
        </a>
